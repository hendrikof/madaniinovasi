    <script>
    document.addEventListener('DOMContentLoaded', () => {
        
        const smoothScrollLinks = document.querySelectorAll('a[href^="#"]');
        for (const link of smoothScrollLinks) {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        }

        const timelineItems = document.querySelectorAll('.timeline-item');
        timelineItems.forEach(item => {
            item.querySelector('h3').addEventListener('click', () => {
                const isActive = item.classList.contains('active');
                timelineItems.forEach(i => i.classList.remove('active'));
                if (!isActive) {
                    item.classList.add('active');
                }
            });
        });

        const tabButtons = document.querySelectorAll('.tab-button');
        const tabPanes = document.querySelectorAll('.tab-pane');
        tabButtons.forEach(button => {
            button.addEventListener('click', () => {
                const tabId = button.dataset.tab;
                
                tabButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');

                tabPanes.forEach(pane => {
                    if (pane.id === tabId) {
                        pane.classList.remove('hidden');
                        pane.classList.add('active');
                    } else {
                        pane.classList.add('hidden');
                        pane.classList.remove('active');
                    }
                });
            });
        });

        const kpiData = {
            finansial: {
                labels: ['Usaha Didanai', 'Modal Lanjutan (Miliar Rp)', 'Valuasi Portofolio (Miliar Rp)', 'Target IRR (%)'],
                data: [20, 50, 150, 25]
            },
            sosial: {
                labels: ['Pekerjaan Diciptakan', 'Penerima Manfaat (Ribu)', 'Pengurangan Emisi CO2 (Ton)', 'Target SDG Tercapai'],
                data: [500, 100, 1000, 5]
            },
            ekosistem: {
                labels: ['Kemitraan Pemerintah', 'Rekomendasi Kebijakan', 'Liputan Media', 'Acara Diselenggarakan'],
                data: [10, 5, 150, 20]
            }
        };

        const chartCtx = document.getElementById('kpiChart').getContext('2d');
        let kpiChart;

        function createOrUpdateChart(kpiCategory) {
            if (kpiChart) {
                kpiChart.destroy();
            }

            const chartConfig = {
                type: 'bar',
                data: {
                    labels: kpiData[kpiCategory].labels,
                    datasets: [{
                        label: `KPI ${kpiCategory.charAt(0).toUpperCase() + kpiCategory.slice(1)}`,
                        data: kpiData[kpiCategory].data,
                        backgroundColor: '#81B29A',
                        borderColor: '#2C5F2D',
                        borderWidth: 2,
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += new Intl.NumberFormat('id-ID').format(context.parsed.y);
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: '#e5e7eb'
                            }
                        },
                        x: {
                           grid: {
                                display: false
                           }
                        }
                    }
                }
            };
            kpiChart = new Chart(chartCtx, chartConfig);
        }

        const kpiButtons = document.querySelectorAll('.kpi-button');
        kpiButtons.forEach(button => {
            button.addEventListener('click', () => {
                const kpiCategory = button.dataset.kpi;
                createOrUpdateChart(kpiCategory);
                kpiButtons.forEach(btn => {
                    btn.classList.remove('btn-secondary');
                    btn.classList.add('bg-gray-200', 'text-gray-700');
                });
                button.classList.add('btn-secondary');
                button.classList.remove('bg-gray-200', 'text-gray-700');
            });
        });
        
        createOrUpdateChart('finansial');
    });
    </script>
</body>
</html>
